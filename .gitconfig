[user]
    name = feiz
    email = logiq.feiz@gmail.com

[core]
    editor = vim

[merge]
    tool = vimdiff2
    prompt = false

[mergetool]
    keepBackup = false

[alias]
    st = status
    ci = commit
    co = checkout
    pul = pull
    pus = push
    la = log --all
    di = diff
    glog = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[color]
    diff = auto
    grep = auto
    interactive = auto
    showbranch = auto
    status = auto

[i18n]
    commitEncoding = utf-8
    logOutputEncoding = utf-8
